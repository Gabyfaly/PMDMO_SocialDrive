<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_white"
    tools:context=".InterfazLista">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:textSize="20dp"
            android:textColor="@color/negro"
            android:background="@color/bluex"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:text="INFORMACIÓN SOBRE SOCIALDRIVE: "/>

        <!-- Para agregar nuevos drawables de la galería de clipart usar: New / Vector Assets -->

    </LinearLayout>

    <ListView
        android:id="@+id/listViewMarcadores"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>